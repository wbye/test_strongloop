doctype
html
    head
        include ./includes/head.jade
        link(rel='stylesheet',type="text",href="/css/admin/member.css")
    body
        .ui.container
            .ui.segment.padding
                .ui.header
                    h1 会员列表
                    .sub.header 查看/编辑会员信息
            table.ui.padded.celled.table
                thead
                    th 会员
                    th 加入时间
                    th 启用/禁用
                    th 操作
                tbody
                    if members.length ==0
                        tr
                            td.center.aligned(colspan=4) 暂无数据
                    else
                        for member in members
                            tr(data-member-id="#{member.id}")
                                td
                                    h4.ui.image.header
                                        image.ui.rounded.image(src="http://placehold.it/100x100")
                                        .content= member.name
                                            .sub.header xxx
                                td 2015/01/10
                                td
                                    .ui.toggle.checkbox
                                        input(name="enable",type="checkbox",checked="#{member.enable}")
                                        label
                                td
                                    .ui.button.labeled.icon.button.small.edit
                                        i.icon.edit
                                        span 编辑
                                    .ui.button.labeled.icon.button.small.red.delete
                                        i.icon.remove.user
                                        span 删除
                tfoot.full-wdith
                    tr
                        th(colspan=4)
                            div.ui.right.floated.bigger.primary.labeled.icon.button#add-user
                                i.icon.user.add
                                span 添加
        #my-dialog.ui.modal.small
        script#add(type='text/html')
            .header 添加
            .content
                .ui.form.member
                    .left-info
                        .field
                            label 昵称
                            input
                        .field
                            label 性别
                            select
                                option 保密
                                option 男
                                option 女
                                option 未知
                        .field
                            label 状态
                            select
                                option 启用
                                option 禁用
                    .right-info
                        .ui.image
                            img(src="http://www.placehold.it/200x200")
            .actions
                .ui.button.cancel 取消
                .ui.button.primary.approve 创建
    include ./includes/foot.jade
    script(type="text/javascript",src="/js/main.js")
    script(type="text/javascript",src="/js/lib/requirejs/require.js",data-main="admin/member/index")