.header 添加
.content
    .ui.form.member
        .left-info
            .field
                label 昵称
                input(name='member-name',value!="<%=name%>")
            .field
                label 性别
                select(name='gender',value!="<%=gender%>")
                    option(value=0) 保密
                    option(value=1) 男
                    option(value=2) 女
            .field
                label 状态
                select(name='enable',value!="<%=enable%>")
                    option(value=1) 启用
                    option(value=0) 禁用
        .right-info
            .ui.image
                img(src="http://www.placehold.it/200x200")
.actions
    .ui.button.cancel 取消
    .ui.button.primary.approve 创建